@implements IDisposable
@inject ToastService Toasts

<div class="toast-container position-fixed top-0 end-0 p-3">
    @foreach (var toast in Toasts.Toasts)
    {
        <div class="toast show align-items-center @GetToastClass(toast) mb-2" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @toast.Message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" aria-label="Close"
                        @onclick="() => Toasts.Dismiss(toast.Id)"></button>
            </div>
        </div>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        Toasts.ToastsChanged += HandleToastsChanged;
    }

    private void HandleToastsChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private static string GetToastClass(ToastMessage toast)
    {
        var stateClass = toast.State switch
        {
            ToastState.Info => "text-bg-info",
            ToastState.Warning => "text-bg-warning",
            ToastState.Error => "text-bg-danger",
            _ => "text-bg-secondary"
        };

        var closingClass = toast.IsClosing ? "toast-exit" : string.Empty;
        return string.IsNullOrWhiteSpace(closingClass) ? stateClass : $"{stateClass} {closingClass}";
    }

    public void Dispose()
    {
        Toasts.ToastsChanged -= HandleToastsChanged;
    }
}
