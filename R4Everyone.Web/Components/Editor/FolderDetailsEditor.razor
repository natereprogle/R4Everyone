<div class="row g-3">
    <div class="col-12">
        <label class="form-label">Title</label>
        <input class="form-control" value="@Folder.Title" @oninput="OnFolderTitleInput" />
    </div>
    <div class="col-12">
        <label class="form-label">Description</label>
        <textarea class="form-control" rows="4" @oninput="OnFolderDescriptionInput">@Folder.Description</textarea>
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" checked="@Folder.OneHot" @onchange="OnFolderOneHotChanged" />
            <label class="form-check-label">One Hot</label>
        </div>
        @if (Folder.OneHot)
        {
            <div class="form-text">Only one cheat in this folder can be enabled at a time.</div>
        }
    </div>
</div>

@code {
    [Parameter] public R4Folder Folder { get; set; } = null!;
    [Parameter] public EventCallback<ChangeEventArgs> OnFolderTitleInput { get; set; }
    [Parameter] public EventCallback<ChangeEventArgs> OnFolderDescriptionInput { get; set; }
    [Parameter] public EventCallback<ChangeEventArgs> OnFolderOneHotChanged { get; set; }
}
